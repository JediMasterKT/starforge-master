                echo "    Show error logs only (default: 50)"
                echo "    Example: starforge logs errors 20"
                echo ""
                echo -e "  ${YELLOW}warnings [count]${NC}"
                echo "    Show warning logs only (default: 50)"
                echo "    Example: starforge logs warnings 20"
