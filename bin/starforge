        ;;

    doctor)
        # Diagnostic tool to check StarForge installation health
        if [ ! -d ".claude" ]; then
            echo -e "${RED}âŒ StarForge not installed in this project${NC}"
            echo -e "   Run: starforge install"
            exit 1
        fi

