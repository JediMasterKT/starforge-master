{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Grep",
      "Glob",
      "LS",
      "Bash",
      "WebSearch",
      "WebFetch",
      "Task",
      "Explore"
    ],
    "deny": [
      "Write(/etc/**)",
      "Write(/usr/**)",
      "Write(/bin/**)",
      "Write(/sbin/**)",
      "Write(/System/**)",
      "Write(/Library/LaunchDaemons/**)",
      "Write(/Library/LaunchAgents/**)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/claude/**)",
      "Edit(/etc/**)",
      "Edit(/usr/**)",
      "Edit(/bin/**)",
      "Edit(/sbin/**)",
      "Edit(/System/**)",
      "Edit(~/.ssh/**)",
      "Edit(~/.aws/**)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf /Users:*)",
      "Bash(rm -rf {{PROJECT_DIR}}/.git:*)",
      "Bash(rm -rf .git:*)",
      "Bash(git push --force origin main:*)",
      "Bash(git push -f origin main:*)",
      "Bash(git push --force-with-lease origin main:*)",
      "Bash(git reset --hard origin/main:*)",
      "Bash(git checkout main && git reset:*)"
    ],
    "ask": [
      "Bash(sudo :*)",
      "Bash(su :*)",
      "Bash(chmod +x /usr/* :*)",
      "Bash(chown :*)",
      "Bash(kill :*)",
      "Bash(killall :*)",
      "Bash(shutdown :*)",
      "Bash(reboot :*)",
      "Bash(dd :*)",
      "Bash(mkfs :*)",
      "Bash(fdisk :*)",
      "Bash(diskutil :*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_DIR}}/.claude/hooks/block-main-edits.sh"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_DIR}}/.claude/hooks/block-main-bash.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "{{PROJECT_DIR}}/.claude/hooks/stop.py"
          }
        ]
      }
    ]
  }
}
